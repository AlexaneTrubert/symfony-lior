<div class="card">
    <img src="{{ product.picture }}" alt="Image du produit" class="img-fluid">

    <div class="card-body">
        <h4 class="card-title">{{ product.name }} ({{ product.price / 100 }}&euro;)</h4>
        <span class="badge text-bg-info">{{ product.category }}</span>
        <p class="card-text">
            {{ product.shortDescription }}
        </p>
        <a href="{{ path('product_show', {'category_slug': product.category.slug, 'slug': product.slug}) }}"
           class="btn btn-primary btn-sm">DÃ©tail</a>
        <a href="{{ path('cart_add', {'id': product.id}) }}" class="btn btn-success btn-sm">Ajouter</a>
    </div>
</div>