{% extends "base.html.twig" %}

{% block title %}- Catégorie : {{ category.name }}{% endblock %}

{% block body %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('home_index') }}">Accueil</a></li>
            <li class="breadcrumb-item active">{{ category.name }}</li>
        </ol>
    </nav>

    <h1>Catégorie : {{ category.name }}</h1>

    <div class="row">
        {% for product in category.products %}
            <div class="col-3">
                <div class="card">
                    <img src="{{ product.picture }}" alt="Image du produit" class="img-fluid">

                    <div class="card-body">
                        <h4 class="card-title">{{ product.name }} ({{ product.price / 100 }}&euro;)</h4>
                        <span class="badge text-bg-info">{{ product.category }}</span>
                        <p class="card-text">
                            {{ product.shortDescription }}
                        </p>
                        <a href="{{ path('product_show', {'category_slug': product.category.slug, 'slug': product.slug}) }}" class="btn btn-primary btn-sm">Détail</a>
                        <a href="#" class="btn btn-success btn-sm">Ajouter</a>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
